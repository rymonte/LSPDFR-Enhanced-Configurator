<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LSPDFREnhancedConfigurator.UI.ViewModels"
        xmlns:converters="using:LSPDFREnhancedConfigurator.UI.Converters"
        x:Class="LSPDFREnhancedConfigurator.UI.Views.RestoreBackupDialog"
        x:DataType="vm:RestoreBackupDialogViewModel"
        Title="Restore from Backup"
        Width="600" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:RestoreBackupDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="20">

        <!-- Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
            <Image Source="/Resources/Icons/refresh-icon.png"
                  Width="24"
                  Height="24"
                  VerticalAlignment="Center"/>
            <TextBlock Text="Restore Ranks.xml from Backup"
                      FontSize="18"
                      FontWeight="Bold"
                      Foreground="{StaticResource AccentCyanBrush}"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Instructions -->
        <TextBlock Grid.Row="1"
                  Text="{Binding InstructionsText}"
                  FontSize="14"
                  Foreground="{Binding HasBackups, Converter={StaticResource BoolToColorConverter}}"
                  Margin="0,0,0,8"/>

        <!-- File Details Label -->
        <TextBlock Grid.Row="2"
                  Text="Backup Details:"
                  FontSize="14"
                  FontWeight="Bold"
                  Foreground="{StaticResource AccentCyanBrush}"
                  Margin="0,0,0,8"/>

        <!-- File Details TextBox -->
        <Border Grid.Row="3"
                Background="{StaticResource DarkerBackgroundBrush}"
                BorderBrush="{StaticResource AccentCyanBrush}"
                BorderThickness="1"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding FileDetailsText}"
                        FontFamily="Consolas,Courier New,monospace"
                        FontSize="12"
                        Background="{StaticResource DarkerBackgroundBrush}"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Padding="8"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="4" ColumnDefinitions="*,12,*,12,*">
            <Button Grid.Column="0"
                   Content="Cancel"
                   HorizontalAlignment="Stretch"
                   Height="35"
                   FontSize="14"
                   Click="CancelButton_Click"/>
            <Button Grid.Column="2"
                   Content="{Binding ChooseButtonText}"
                   HorizontalAlignment="Stretch"
                   Height="35"
                   FontSize="14"
                   Command="{Binding ChooseBackupCommand}"
                   Click="ChooseButton_Click"/>
            <Button Grid.Column="4"
                   Content="{Binding ConfirmButtonText}"
                   HorizontalAlignment="Stretch"
                   Height="35"
                   FontSize="14"
                   FontWeight="Bold"
                   Command="{Binding ConfirmCommand}"
                   Click="ConfirmButton_Click"/>
        </Grid>

    </Grid>
</Window>
